{
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite dev",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "lock": false,
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-unused-ignore", "default-param-last"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "indentWidth": 2,
    "lineWidth": 90,
    "semiColons": false,
    "singleQuote": true
  },
  "unstable": ["fmt-component"]
}
